import { useState } from "react";
import { styles } from "../../styles/AppStyles";

// Local styles for specific result display requirements
const localStyles = {
    resultItem: {
        display: 'flex',
        justifyContent: 'space-between',
        alignItems: 'center',
        padding: '12px 0',
        borderBottom: '1px solid #e2e8f0',
        fontSize: '0.95rem',
    },
    resultLabel: {
        fontWeight: '600',
        color: '#64748b',
        textTransform: 'capitalize',
    },
    resultValue: {
        color: '#1e293b',
        fontWeight: '500',
        textAlign: 'right',
    },
    errorValue: {
        color: '#ef4444',
        fontWeight: '600',
    },
    successValue: {
        color: '#10b981',
        fontWeight: '600',
    }
};

export default function CkycView() {
    const [cif, setCif] = useState('');
    const [category, setCategory] = useState('');
    const [region, setRegion] = useState('X'); // Default to first option value
    const [response, setResponse] = useState(null);
    const [error, setError] = useState('');
    const [loading, setLoading] = useState(false);

    async function handleSubmit(e) {
        e.preventDefault();
        setLoading(true);
        setError('');
        setResponse(null);
        const userToken = localStorage.getItem('userToken');

        try {
            const res = await fetch('http://10.1.161.165:5050/create_ckyc/', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${userToken}`,
                },
                body: JSON.stringify({
                    cif,
                    category,
                    region,
                }),
            });

            if (!res.ok) {
                const errorData = await res.json();
                throw new Error(errorData.detail || 'Failed to create social attribute');
            }

            const data = await res.json();
            console.log("API Response Data:", data);
            setResponse(data);
        } catch (err) {
            setError(err.message);
            console.error("Error creating social attribute:", err);
        } finally {
            setLoading(false);
        }
    }

    return (
        <div>
            <div style={styles.pageHeader}>
                <div>
                    <h1 style={styles.pageTitle}>Create CKYC</h1>
                    <p style={styles.pageSubtitle}>Create Central KYC Records</p>
                </div>
            </div>

            <div style={styles.formCard}>
                <form onSubmit={handleSubmit}>
                    <div style={styles.formGrid}>
                        <div style={styles.formGroup}>
                            <label style={styles.label}>CIF</label>
                            <input
                                type="text"
                                value={cif}
                                onChange={(e) => setCif(e.target.value)}
                                style={styles.input}
                                required
                            />
                        </div>

                        <div style={styles.formGroup}>
                            <label style={styles.label}>Category</label>
                            <input
                                type="text"
                                value={category}
                                onChange={(e) => setCategory(e.target.value)}
                                style={styles.input}
                                required
                            />
                        </div>

                        <div style={styles.formGroup}>
                            <label style={styles.label}>Region</label>
                            <select
                                value={region}
                                onChange={(e) => setRegion(e.target.value)}
                                style={styles.select || { ...styles.input, appearance: 'auto' }} // Fallback if styles.select is undefined
                            >
                                <option value="X">X - UAT</option>
                                <option value="O">O - UAT</option>
                                <option value="Y">Y - UAT</option>
                                <option value="Z">Z - UAT</option>
                                <option value="K">K - Pre-Prod</option>
                                <option value="J">J - Pre-Prod</option>
                                <option value="R1">R1 - Pre-Prod</option>
                                <option value="Y2">Y2 - Pre-Prod</option>
                                <option value="L">L - Pre-Prod</option>
                                <option value="C">C - Pre-Prod</option>
                            </select>
                        </div>
                    </div>

                    <button type="submit" style={styles.primaryButton} disabled={loading}>
                        {loading ? 'Submitting...' : 'Submit'}
                    </button>
                </form>
            </div>

            {(error || response) && (
                <div style={styles.resultsCard}>
                    {error && <div style={styles.errorMsg}>{error}</div>}

                    {response && (
                        <>
                            <div style={styles.resultsHeader}>
                                <h3 style={styles.resultsTitle}>API Response</h3>
                            </div>
                            <div style={styles.resultsList}>
                                {(() => {
                                    // Extract data from response
                                    // Assuming res_dta is an object as per latest instruction
                                    // We still handle the case where it might be missing
                                    const parsedDta = response.res_dta || {};

                                    const journalNo = parsedDta?.JOURNAL_NUMBER;
                                    const status = parsedDta?.RESPONSE_STATUTS; // Note: Typo in API response 'STATUTS'
                                    const errorCode = parsedDta?.error_code;
                                    const errorDesc = parsedDta?.ERROR_DESCRIPTION;
                                    const rrn = response?.RRN || parsedDta?.RRN;

                                    return (
                                        <div style={{ display: 'flex', flexDirection: 'column' }}>
                                            {/* Always show RRN if present */}
                                            {rrn && (
                                                <div style={localStyles.resultItem}>
                                                    <span style={localStyles.resultLabel}>RRN:</span>
                                                    <span style={localStyles.resultValue}>{rrn}</span>
                                                </div>
                                            )}

                                            {/* Success Case: Journal Number Present */}
                                            {journalNo ? (
                                                <>
                                                    <div style={localStyles.resultItem}>
                                                        <span style={localStyles.resultLabel}>Status:</span>
                                                        <span style={{ ...localStyles.resultValue, ...localStyles.successValue }}>
                                                            {status || 'Success'}
                                                        </span>
                                                    </div>
                                                    <div style={localStyles.resultItem}>
                                                        <span style={localStyles.resultLabel}>Journal Number:</span>
                                                        <span style={localStyles.resultValue}>{journalNo}</span>
                                                    </div>
                                                </>
                                            ) : (
                                                /* Error Case */
                                                <>
                                                    {errorCode && (
                                                        <div style={localStyles.resultItem}>
                                                            <span style={localStyles.resultLabel}>Error Code:</span>
                                                            <span style={{ ...localStyles.resultValue, ...localStyles.errorValue }}>
                                                                {errorCode}
                                                            </span>
                                                        </div>
                                                    )}
                                                    {errorDesc && (
                                                        <div style={localStyles.resultItem}>
                                                            <span style={localStyles.resultLabel}>Description:</span>
                                                            <span style={{ ...localStyles.resultValue, ...localStyles.errorValue }}>
                                                                {errorDesc}
                                                            </span>
                                                        </div>
                                                    )}
                                                </>
                                            )}

                                            {/* Fallback: If no specific fields match, show all keys in parsedDta as key-value pairs */}
                                            {!journalNo && !errorCode && !errorDesc && Object.keys(parsedDta).length > 0 && (
                                                Object.entries(parsedDta).map(([key, value]) => (
                                                    <div key={key} style={localStyles.resultItem}>
                                                        <span style={localStyles.resultLabel}>{key.replace(/_/g, ' ')}:</span>
                                                        <span style={localStyles.resultValue}>{String(value)}</span>
                                                    </div>
                                                ))
                                            )}
                                        </div>
                                    );
                                })()}
                            </div>
                        </>
                    )}
                </div>
            )}
        </div>
    );
}
