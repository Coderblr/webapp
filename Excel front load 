import { useState } from "react";
import { styles } from "../../styles/AppStyles";

export default function ExcelOnboardingView() {
  const [file, setFile] = useState(null);
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState("");
  const [successMsg, setSuccessMsg] = useState("");

  const handleFileChange = (e) => {
    setFile(e.target.files[0]);
    setError("");
    setSuccessMsg("");
  };

  const handleUpload = async (e) => {
    e.preventDefault();

    if (!file) {
      setError("Please select an Excel file.");
      return;
    }

    setLoading(true);
    setError("");
    setSuccessMsg("");

    try {
      const formData = new FormData();
      formData.append("file", file);

      const res = await fetch(
        "http://10.1.161.165:5050/full_onboarding_with_excel/",
        {
          method: "POST",
          body: formData,
        }
      );

      if (!res.ok) {
        throw new Error(`Server error: ${res.status}`);
      }

      // ðŸ”½ Download returned Excel file
      const blob = await res.blob();
      const url = window.URL.createObjectURL(blob);

      const link = document.createElement("a");
      link.href = url;
      link.download = "onboarding_result.xlsx";
      document.body.appendChild(link);
      link.click();

      document.body.removeChild(link);
      window.URL.revokeObjectURL(url);

      setSuccessMsg("Excel processed successfully. Download started.");

    } catch (err) {
      console.error(err);
      setError("Failed to process Excel file.");
    } finally {
      setLoading(false);
    }
  };

  return (
    <div>
      {/* ðŸ”¹ Page Header */}
      <div style={styles.pageHeader}>
        <h1 style={styles.pageTitle}>Excel Based Full Onboarding</h1>
        <p style={styles.pageSubtitle}>
          Upload Excel to generate CIF, CKYC & Deposit accounts
        </p>
      </div>

      {/* ðŸ”¹ Form Card */}
      <div style={styles.formCard}>
        <form onSubmit={handleUpload}>
          <div style={styles.formGrid}>
            <div style={styles.formGroup}>
              <label style={styles.label}>Upload Excel File</label>
              <input
                type="file"
                accept=".xlsx,.xls"
                onChange={handleFileChange}
                style={styles.input}
              />
            </div>
          </div>

          {error && <div style={styles.errorMsg}>{error}</div>}
          {successMsg && (
            <div style={{ color: "green", marginTop: "10px" }}>
              {successMsg}
            </div>
          )}

          <button
            type="submit"
            style={styles.primaryButton}
            disabled={loading}
          >
            {loading ? "Processing..." : "Upload & Generate"}
          </button>
        </form>
      </div>
    </div>
  );
}