//login
"use client";

import { useState } from 'react';
import { useRouter } from 'next/navigation';
import styles from './page.module.css'; // Import the CSS module

export default function LoginPage() {
  const router = useRouter();
  const [username, setUsername] = useState('');
  const [password, setPassword] = useState('');
  const [error, setError] = useState('');

  async function handleLogin(e) {
    e.preventDefault();
    try {
      const res = await fetch('http://10.1.161.165:5050/token', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/x-www-form-urlencoded'
        },
        body: new URLSearchParams({
          username,
          password
        })
      });

      if (!res.ok) {
        const data = await res.json();
        throw new Error(data.detail || 'Login failed');
      }

      const data = await res.json();
      localStorage.setItem('token', data.access_token);
      router.push('/user_me');
    } catch (err) {
      setError(err.message);
    }
  }

  return (
    <div className={styles.container}>
      <div className={styles.formContainer}>
        <h1 className={styles.title}>Login</h1>
        <form onSubmit={handleLogin}>
          <input
            type="text"
            placeholder="Username"
            value={username}
            onChange={(e) => setUsername(e.target.value)}
            className={styles.formInput}
            required
          />
          <input
            type="password"
            placeholder="Password"
            value={password}
            onChange={(e) => setPassword(e.target.value)}
            className={styles.formInput}
            required
          />
          <button type="submit" className={styles.loginButton}>Login</button>
          {error && <p className={styles.errorMessage}>{error}</p>}
        </form>
      </div>
    </div>
  );
}

//register
'use client';

import { useState } from 'react';
import { useRouter } from 'next/navigation';
// Import the CSS module
import styles from './page.module.css';

export default function Register() {
  const router = useRouter();
  const [formData, setFormData] = useState({
    username: '',
    password: '',
    firstName: '',
    lastName: '',
    departmentCode: 0,
  });
  const [message, setMessage] = useState('');
  const [loading, setLoading] = useState(false);

  const handleChange = (e) => {
    const { name, value } = e.target;
    // Ensure departmentCode is treated as a number
    const updatedValue = name === 'departmentCode' ? Number(value) : value;

    setFormData(prev => ({
      ...prev,
      [name]: updatedValue,
    }));
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    setLoading(true);
    setMessage('');

    try {
      // NOTE: This IP address 'http://10.1.161.164:5050/user' is an internal network address and may not be reachable in all environments.
      const response = await fetch('http://10.1.161.164:5050/user', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(formData),
      });

      const data = await response.json();

      if (response.ok) {
        setMessage('User registered successfully! Redirecting to login...');
        setTimeout(() => {
          router.push('/login');
        }, 2000);
      } else {
        setMessage(`Error: ${data.detail}`);
      }
    } catch (error) {
      setMessage('An unexpected error occurred. Please try again.');
    } finally {
      setLoading(false);
    }
  };

  return (
    <div className={styles.container}>
      <div className={styles.card}>
        <h1 className={styles.header}>User Registration</h1>
        <form onSubmit={handleSubmit} className={styles.form}>
          <div className={styles.formGroup}>
            <label htmlFor="username" className={styles.label}>Username</label>
            <input type="text" id="username" name="username" value={formData.username} onChange={handleChange} required className={styles.input} />
          </div>
          <div className={styles.formGroup}>
            <label htmlFor="password" className={styles.label}>Password</label>
            <input type="password" id="password" name="password" value={formData.password} onChange={handleChange} required className={styles.input} />
          </div>
          {/* Using a utility class for the name field layout */}
          <div className={styles.nameFields}>
            <div className={styles.formGroup} style={{ flex: 1 }}>
              <label htmlFor="firstName" className={styles.label}>First Name</label>
              <input type="text" id="firstName" name="firstName" value={formData.firstName} onChange={handleChange} required className={styles.input} />
            </div>
            <div className={styles.formGroup} style={{ flex: 1 }}>
              <label htmlFor="lastName" className={styles.label}>Last Name</label>
              <input type="text" id="lastName" name="lastName" value={formData.lastName} onChange={handleChange} required className={styles.input} />
            </div>
          </div>
          <div className={styles.formGroup}>
            <label htmlFor="departmentCode" className={styles.label}>Department Code</label>
            <input type="number" id="departmentCode" name="departmentCode" value={formData.departmentCode} onChange={handleChange} required className={styles.input} />
          </div>

          <button
            type="submit"
            disabled={loading}
            // Dynamically apply button styles based on loading state
            className={`${styles.button} ${loading ? styles.buttonDisabled : ''}`}
          >
            {loading ? 'Submitting...' : 'Register'}
          </button>
        </form>

        {message && (
          <p className={`${styles.message} ${message.startsWith('Error') ? styles.messageError : styles.messageSuccess}`}>
            {message}
          </p>
        )}
      </div>
    </div>
  );
}

//user_me_dashboard



'use client'; // This is a Client Component

import { useState, useEffect } from 'react';
import Link from 'next/link';
import { useRouter } from 'next/navigation';
import styles from './page.module.css'; 
import Image from 'next/image'; 

const DashboardPage = () => {
    const [user, setUser] = useState(null); // Initialize as null for clearer checks
    const [loading, setLoading] = useState(true);
    const [error, setError] = useState('');
    const router = useRouter();

    useEffect(() => {
        const fetchUserProfile = async () => {
            try {
                setLoading(true);
                const token = localStorage.getItem('token');
                if (!token) {
                    setError('User not authenticated. Redirecting to login.');
                    // Redirect to login page if no token is found
                    router.push('/login'); 
                    return;
                }

                // The URL of your FastAPI endpoint
                const backendUrl = 'http://10.1.161.165:5050/users/me/';
                const response = await fetch(backendUrl, {
                    method: 'GET',
                    headers: {
                        'Accept': 'application/json',
                        'Authorization': `Bearer ${token}`,
                    },
                });

                if (!response.ok) {
                    throw new Error('Failed to fetch user data');
                }

                const userData = await response.json();
                setUser(userData);
            } catch (err) {
                console.error(err);
                setError(err.message || 'An error occurred');
                // Optional: Redirect on major error
                // router.push('/login'); 
            } finally {
                setLoading(false);
            }
        };

        fetchUserProfile();
    }, [router]);

    const handleLogout = () => {
        localStorage.removeItem('token');
        router.push('/login');
    };

    if (loading) {
        return <div className={styles.container}><p>Loading dashboard...</p></div>;
    }

    if (error) {
        return <div className={styles.container}><p className={styles.error}>Error: {error}</p></div>;
    }
    
    // Safety check in case user is still null after loading
    if (!user) {
        return <div className={styles.container}><p>User data not available.</p></div>;
    }

    return (
        <div className={styles.dashboardContainer}>
            {/* Navigation Bar */}
            <nav className={styles.navbar}>
                <div className={styles.navLinks}>
                    <Link href="/">Home</Link>
                    <Link href="/about">About</Link>
                    <Link href="/contact">Contact</Link>
                </div>
                




                <div className={styles.navTitle}>
                    {/* Add a container div around the icon */}
                    <div className={styles.sbiIconContainer}>
                        <Image 
                            src="/images/sbi.png" 
                            alt="SBI Icon"
                            width={40} 
                            height={40} 
                            className={styles.sbiIcon} 
                        />
                    </div>
                    Welcome to SBI
                </div>



                <div className={styles.userSection}>
                    <span>Welcome, {user.username}</span>
                    <button onClick={handleLogout} className={styles.logoutButton}>Logout</button>
                </div>
            </nav>

            {/* Main Dashboard Content */}
            <main className={styles.mainContent}>
                <h1 className={styles.welcomeTitle}>Automated Test Data Creation</h1>
                
                <div className={styles.userDetails}>
                    <h2>User Profile Details</h2>
                    <p><strong>Name:</strong> {user.firstName}</p>
                    <p><strong>Department Code:</strong> {user.departmentCode}</p>
                    {/* Add other user details as needed */}
                </div>

                <div className={styles.actionButtons}>
                    
                    <Link href="/cif_creation" className={styles.actionButton}>Create CIF</Link>
                    <Link href="/loan_creation" className={styles.actionButton}>Create Loan</Link>
                    <Link href="/ckyc" className={styles.actionButton}>CKYC</Link>
                    <Link href="/social_attribute" className={styles.actionButton}>Social Attribute</Link>
                    <Link href="/ccod_accoun_creation" className={styles.actionButton}>Create CCOD Account</Link>
                    <Link href="/deposit_accoun_creation" className={styles.actionButton}>Create CCOD Account</Link>

                </div>
            </main>

            <footer className={styles.footer}>
                <p>Â© 2025 SBI Bank </p>
            </footer>
        </div>
    );
};

export default DashboardPage;




