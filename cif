"use client";
import { useState } from "react";
// Import the module styles object
import styles from "./page.module.css" 

export default function MyForm() {
  const [region, setRegion] = useState("O");
  const [no_cif, setNo_cif] = useState(1);
  const [acc_type, setAcc_type] = useState('PCIF');
  const [response, setResponse] = useState([ ]);

  const handleSubmit = async (event) => {
    event.preventDefault();
    console.log(region)
    console.log(no_cif)
    console.log(acc_type)
    // NOTE: This URL is an internal IP and will only work within your specific network environment.
    const url = `http://10.1.161.199:5050/create_cif/`;

    try {
      const res = await fetch(url, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          region: region,
          no_cif: parseInt(no_cif, 10),
          acc_type: acc_type,
        }),
      });

      if (!res.ok) {
        throw new Error(`API returned an error: ${res.status} ${res.statusText}`);
      }

      const data = await res.json();
      
      setResponse(data);
      // Optional chaining for safer access if data might be empty/different
      console.log(data?.[0]?.RRN); 
      console.log(data)
    } catch (error) {
      console.error("Fetch error:", error);
      setResponse([{ res_data: JSON.stringify({ ERROR_DESCRIPTION: error.message }) }]);
    }
  };

  const downloadCsv = () => {
    if (!response || response.length === 0) {
      alert("No data to download.");
      return;
    }

    const headers = ["Customer Number"];
    let csvContent = "data:text/csv;charset=utf-8," + headers.join(",") + "\n";

    response.forEach(item => {
      try {
        const parsedResData = JSON.parse(item.res_data);
        const row = [
          parsedResData.CUSTOMER_NUMBER || '',
        ].map(field => `"${field}"`).join(",");
        csvContent += row + "\n";
      } catch (e) {
        console.error("Error parsing res_data for CSV:", e);
      }
    });

    const encodedUri = encodeURI(csvContent);
    const link = document.createElement("a");
    link.setAttribute("href", encodedUri);
    link.setAttribute("download", "cif_data.csv");
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  };

  return (
    // Use styles.className instead of "className"
    <div className={styles.container}>
      <div className={styles.form}>
        <h1>Create CIF</h1>
        <form onSubmit={handleSubmit}>
          <div className={styles.form_group}>
            <label htmlFor="region">Region:</label>
            <select name="region" id="region" value={region} onChange={(e) => setRegion(e.target.value)} required>
              <option value="X">X - UAT</option>
              <option value="O">O - UAT</option>
              <option value="Y">Y - UAT</option>
              <option value="Z">Z - UAT</option>
              <option value="K">K - Pre-Prod</option>
              <option value="J">J - Pre-Prod</option>
              <option value="R1">R1 - Pre-Prod</option>
              <option value="Y2">Y2 - Pre-Prod</option>
              <option value="L">L - Pre-Prod</option>
              <option value="C">C - Pre-Prod</option>
            </select>
          </div>
          <div className={styles.form_group}>
            <label htmlFor="no_cif">No. of CIF:</label>
            <input
              type="number"
              min="1"
              max="10"
              id="no_cif"
              value={no_cif}
              onChange={(e) => setNo_cif(e.target.value)}
              required
            />
          </div>
          <div className={styles.form_group}>
            <label htmlFor="acc_type">Account Type:</label>
            <select name="acc_type" id="acc_type" value={acc_type} onChange={(e) => setAcc_type(e.target.value)} required>
              <option value="PCIF">Personal CIF Creation</option>
              <option value="NPCIF">Non-Personal CIF Creation</option>
            </select>
          </div>
          {/* Apply the new submitButton class */}
          <button type="submit" className={styles.submitButton}>Submit</button>
        </form>
      </div>

      <div className={styles.cif_data_container}>
        {response && response.length > 0 ? (
          <>
            <button className={styles.download} onClick={downloadCsv}>Download CSV</button>
            {response.map((item, index) => {
              try {
                const parsedResData = JSON.parse(item.res_data);
                return (
                  // Apply the new resultItem class
                  <div key={index} className={styles.resultItem}>
                    <p>Customer Number: {parsedResData.CUSTOMER_NUMBER}</p>
                  </div>
                );
              } catch (e) {
                return (
                  <div key={index} className={styles.resultItem}>
                    <p>Error parsing res_data: {item.res_data}</p>
                  </div>
                );
              }
            })}
          </>
        ) : (
          // Apply the new noDataMessage class
          <p className={styles.noDataMessage}>No customer data to display.</p>
        )}
      </div>
    </div>
  );
}

//account
// app/page.js
'use client';
import { useState } from 'react';
import styles from "./page.module.css";

export default function MyForm() {
  const [region, setRegion] = useState("O");
  const [cif, setCif] = useState("");
  const [prod_code, setProd_code] = useState("");
  const [acc_segment, setAcc_Segment] = useState("");
  const [no_acc, setNo_acc] = useState(1);
  const [response, setResponse] = useState([ ]);
  const [loading, setLoading] = useState(false);
  const [error, setError] = useState([ ]);

  const handleSubmit = async (event) => {
    event.preventDefault();
    setLoading(true);
    setError(null);
    setResponse([]);

    console.log("Submitting with:", { region, cif, prod_code, acc_segment, no_acc });

    const url = `http://10.1.161.199:5050/create_deposit_account/`; 

    try {
      const res = await fetch(url, {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({
          region: region,
          cif: cif,
          p_code: prod_code, 
          seg_code: acc_segment, 
          no_acc: parseInt(no_acc, 10),
        }),
      });

      if (!res.ok) {
        throw new Error(
          `API returned an error: ${res.status} ${res.statusText}`
        );
      }

      const data = await res.json();
      setResponse(data);
      console.log("API response:", data);
    } catch (err) {
      console.error("Fetch error:", err);
      setError(err.message);
      setResponse([
        { res_data: JSON.stringify({ ERROR_DESCRIPTION: err.message }) },
      ]);
    } finally {
      setLoading(false);
    }
  };

  const downloadCsv = () => {
    if (!response || response.length === 0) {
      alert("No data to download.");
      return;
    }

    const headers = ["Region", "Customer Number", "Product Code", "Account Segment", "RRN", "Status", "Account Number"];
    let csvContent = "data:text/csv;charset=utf-8," + headers.join(",") + "\n";

    response.forEach((item) => {
      try {
        // Your backend returns `res_data` which is a JSON string, so it needs to be parsed
        const parsedResData = JSON.parse(item.res_data);
        const row = [
          parsedResData.REGION || "",
          parsedResData.CUSTOMER_NUMBER || "",
          parsedResData.PRODUCT_CODE || "",
          parsedResData.ACCOUNT_SEGMENT_CODE || "",
          item.RRN || "", // RRN is at the top level
          parsedResData.STATUS || "",
          parsedResData.ACCOUNT_NUMBER || "",
        ].map((field) => `"${field}"`).join(",");
        csvContent += row + "\n";
      } catch (e) {
        console.error("Error parsing res_data for CSV:", e);
      }
    });

    const encodedUri = encodeURI(csvContent);
    const link = document.createElement("a");
    link.setAttribute("href", encodedUri);
    link.setAttribute("download", "account_data.csv");
    document.body.appendChild(link);
    link.click();
    document.body.removeChild(link);
  };

  return (
    <div className={styles.container}>
      <div className={styles.form}>
        <h1 className={styles.h1}>Create Deposit Account</h1>
        <form onSubmit={handleSubmit}>
          <div className={styles["form-group"]}>
            <label htmlFor="region">Region:</label>
            <select
              name="region"
              id="region"
              value={region}
              onChange={(e) => setRegion(e.target.value)}
              required
            >
              <option value="X">X - UAT</option>
              <option value="O">O - UAT</option>
              <option value="Y">Y - UAT</option>
              <option value="Z">Z - UAT</option>
              <option value="K">K - Pre-Prod</option>
              <option value="J">J - Pre-Prod</option>
              <option value="R1">R1 - Pre-Prod</option>
              <option value="Y2">Y2 - Pre-Prod</option>
              <option value="L">L - Pre-Prod</option>
              <option value="C">C - Pre-Prod</option>
            </select>
          </div>

          <div className={styles["form-group"]}>
            <label htmlFor="cif">CIF:</label>
            <input
              type="text"
              id="cif"
              value={cif}
              onChange={(e) => setCif(e.target.value)}
              required
            />
          </div>

          <div className={styles["form-group"]}>
            <label htmlFor="prod_code">Product Code:</label>
            <input
              type="text"
              id="prod_code"
              value={prod_code}
              onChange={(e) => setProd_code(e.target.value)}
              required
            />
          </div>

          <div className={styles["form-group"]}>
            <label htmlFor="acc_segment">Account Segment:</label>
            <input
              type="text"
              id="acc_segment"
              value={acc_segment}
              onChange={(e) => setAcc_Segment(e.target.value)}
              required
            />
          </div>

          <div className={styles["form-group"]}>
            <label htmlFor="no_acc">No. of Accounts:</label>
            <input
              type="number"
              min="1"
              max="10"
              id="no_acc"
              value={no_acc}
              onChange={(e) => setNo_acc(e.target.value)}
              required
            />
          </div>

          <button type="submit" className={styles.button} disabled={loading}>
            {loading ? "Submitting..." : "Submit"}
          </button>
        </form>
      </div>

      <div className={styles.cif_data_container}>
        {error && <p className={styles.error}>Error: {error}</p>}
        {response && response.length > 0 ? (
          <>
            <button className={`${styles.button} ${styles.download}`} onClick={downloadCsv}>
              Download CSV
            </button>
            {response.map((item, index) => {
              try {
                const parsedResData = JSON.parse(item.res_data);
                return (
                  <div key={index} className={styles.responseItem}>
                    <p><strong>RRN:</strong> {item.RRN}</p>
                    <p><strong>Customer Number:</strong> {parsedResData.CUSTOMER_NUMBER}</p>
                    <p><strong>Status:</strong> {parsedResData.STATUS}</p>
                    {parsedResData.ACCOUNT_NUMBER && <p><strong>Account Number:</strong> {parsedResData.ACCOUNT_NUMBER}</p>}
                    {parsedResData.ERROR_DESCRIPTION && <p className={styles.error}><strong>Error:</strong> {parsedResData.ERROR_DESCRIPTION}</p>}
                  </div>
                );
              } catch (e) {
                return (
                  <div key={index} className={styles.responseItem}>
                    <p className={styles.error}>Error parsing response for item with RRN {item.RRN}.</p>
                    <pre className={styles.pre}>{item.res_data}</pre>
                  </div>
                );
              }
            })}
          </>
        ) : (
          !loading && <p>No account data to display.</p>
        )}
      </div>
    </div>
  );
}
