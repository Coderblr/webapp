// components/Auth/RegisterPage.jsx
export function RegisterPage({ 
  onRegister, message, loading, onSwitchToLogin, 
  setUsername, setPassword, setConfirmPassword, setFirstName, setLastName, setDepartmentCode,
  username, password, confirmPassword, firstName, lastName, departmentCode 
}) {
  return (
    <div style={styles.authContainer}>
      <div style={styles.authSplit}>
        {/* Left side */}
        <div style={styles.authLeft}>
          <div style={styles.authBrand}>
            <div style={styles.logoCircle}>SBI</div>
            <span style={styles.brandText}>State Bank of India</span>
          </div>
          <h1 style={styles.authLeftTitle}>Join Our Platform</h1>
          <p style={styles.authLeftSubtitle}>Create an account to start generating test data</p>
          <div style={styles.authFeatureList}>
            <div style={styles.authFeature}>✓ Quick Setup Process</div>
            <div style={styles.authFeature}>✓ Secure Authentication</div>
            <div style={styles.authFeature}>✓ Full Platform Access</div>
          </div>
        </div>
        {/* Right side */}
        <div style={styles.authRight}>
          <div style={styles.authForm}>
            <button onClick={() => onSwitchToLogin()} style={styles.backLink}>← Back to Home</button>
            <h2 style={styles.authTitle}>Create Account</h2>
            <p style={styles.authSubtitle}>Fill in your details to get started</p>
            {/* Form inputs */}
            <div style={styles.formGroup}>
              <label style={styles.label}>Username</label>
              <input
                type="text"
                value={username}
                onChange={(e) => setUsername(e.target.value)}
                style={styles.input}
                placeholder="Choose a username"
                required
              />
            </div>
            {/* Other input fields: firstName, lastName, departmentCode, password, confirmPassword */}
            {/* ... similar to above ... */}
            {message && (
              <div style={{
                ...styles.errorMsg,
                backgroundColor: message.startsWith("Error") ? "#ffebee" : "#e8f5e9",
                color: message.startsWith("Error") ? "#c62828" : "#2e7d32"
              }}>
                {message}
              </div>
            )}
            <button onClick={onRegister} style={styles.submitBtn} disabled={loading}>
              {loading ? "Creating Account..." : "Create Account"}
            </button>
            <div style={styles.divider}>
              <span style={styles.dividerText}>Already have an account?</span>
            </div>
            <button onClick={() => onSwitchToLogin()} style={styles.switchBtn}>Sign In Instead</button>
          </div>
        </div>
      </div>
    </div>
  );
}
5. Dashboard.jsx
CopyRun
// components/Dashboard/Dashboard.jsx
import { useState } from "react";
import { Navbar } from "../Common/Navbar";
import Sidebar from "./Sidebar";
import StatsGrid from "./StatsGrid";
import ProfileCard from "./ProfileCard";
import CIFCreation from "./CIFCreation";
import ComingSoon from "./ComingSoon";

export default function Dashboard({ user, onLogout }) {
  const [sidebarOpen, setSidebarOpen] = useState(true);
  const [activeService, setActiveService] = useState("home");

  const toggleSidebar = () => setSidebarOpen(!sidebarOpen);

  return (
    <div style={styles.dashboardContainer}>
      <Navbar onSidebarToggle={toggleSidebar} onLogout={onLogout} user={user} />
      <div style={styles.mainContainer}>
        <Sidebar activeService={activeService} setActiveService={setActiveService} sidebarOpen={sidebarOpen} />
        <main style={styles.content}>
          {activeService === "home" && <StatsGrid user={user} />}
          {activeService === "cif" && <CIFCreation />}
          {activeService === "ccod" && <ComingSoon title="CCOD Account Creation" />}
          {activeService === "deposit" && <ComingSoon title="Deposit Account Creation" />}
        </main>
      </div>
    </div>
  );
}
6. Sidebar.jsx
CopyRun
// components/Dashboard/Sidebar.jsx
export default function Sidebar({ activeService, setActiveService, sidebarOpen }) {
  if (!sidebarOpen) return null;

  return (
    <aside style={{ ...styles.sidebar, width: "260px" }}>
      <div style={styles.sidebarContent}>
        {/* Menu buttons */}
        <button
          onClick={() => setActiveService("home")}
          style={{
            ...styles.sidebarBtn,
            backgroundColor: activeService === "home" ? "#e3f2fd" : "transparent",
            color: activeService === "home" ? "#003478" : "#666",
            fontWeight: activeService === "home" ? "600" : "normal",
          }}
        >
          <Home size={20} /> Dashboard
        </button>
        {/* Services */}
        <button
          onClick={() => setActiveService("cif")}
          style={{
            ...styles.sidebarBtn,
            backgroundColor: activeService === "cif" ? "#e3f2fd" : "transparent",
            color: activeService === "cif" ? "#003478" : "#666",
            fontWeight: activeService === "cif" ? "600" : "normal",
          }}
        >
          <FileText size={20} /> CIF Creation
        </button>
        {/* other buttons */}
        {/* ... */}
      </div>
    </aside>
  );
}
